    </symbol>
    <symbol id="home" viewBox="0 0 16 16">
        <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5Z"/>
    <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6Z"/>
    </symbol>
    <symbol id="groups" viewBox="0 0 16 16">
        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z"/>
    </symbol>
    <symbol id="events" viewBox="0 0 16 16">
        <path d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zm-3.5-7h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5z"/>
    </symbol>
    <symbol id="menu" viewBox="0 0 16 16">
        <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
    </symbol>
    </svg>

    <header>
        <div class="px-3 py-2 text-bg-info border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-between">
                <a href="#" class="d-flex align-items-center my-2 my-lg-0 text-black text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="LinkCom"><use xlink:href="#barcode"/></svg>
                    <h2> LinkCom </h2>
                </a>

                <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                    <li>
                    <a href="#" class="nav-link text-black">
                        <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#home"/></svg>
                        Home
                    </a>
                    </li>
                    <li>
                    <a href="#" class="nav-link text-black">
                        <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#groups"/></svg>
                        Groups
                    </a>
                    </li>
                    <li>
                    <a href="#" class="nav-link text-black">
                        <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#events"/></svg>
                        Revenges
                    </a>
                    </li>
                </ul>
                <!-- <div class="d-flex">
                    <a href="login.html" class="nav-link btn login">
                        <button type="button" class="btn btn-light text-dark me-2">Login</button>
                    </a>
                    <a href="signup.html" class="nav-link btn signup">
                        <button type="button" class="btn btn-primary">Sign-up</button>
                    </a>
                </div> -->
                
            </div>
        </div>
        </div>
        <div class="px-3 py-2 border-bottom mb-3">
        <div class="container d-flex flex-wrap justify-content-center">
            <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto" role="search">
            <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
            </form>
        </div>
        </div>
    </header>
    <main class="container mt-4">
        <div class="row">
            <% for (var i = 0; i < posts.length; i++) { %>
                <%= posts[i].groupName %>
                <div class="col-md-6 offset-md-3">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="ms-3">
                                    <div class="d-flex flex-wrap justify-content-between align-items-center">
                                        <div class="author-avatar">
                                            <div class="row align-items-center">
                                                <div class="col-auto">
                                                    <img src="../images/linkcom-logo.svg" class="rounded-circle" width="40" height="40">
                                                </div>
                                                <div class="col">
                                                    <h5 class="card-author text-small me-2 mt-2"><%= posts[i].author %></h5>
                                                    <h5 class="card-group"><%= posts[i].group_name %></h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="post-menu">
                                            <svg class="d-block mx-auto mb-2" width="12" height="12"><use xlink:href="#menu"/></svg>
                                            <ul id="menu" class="menu d-none">
                                                <li><a href="#"> Edit Post</a></li>
                                                <li><a href="#"> Delete Post</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <p class="card-text"><%= posts[i].body %></p>
                                    <button class="like-button">Hates <%= posts[i].hates %></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </main>
    </body>
</html>
