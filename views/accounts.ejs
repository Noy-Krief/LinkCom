    <header class="sticky-header">
        <div class="px-3 py-2 text-bg-info border-bottom">
            <div class="header-container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-between">
                    <a href="/home" class="d-flex align-items-center my-2 my-lg-0 text-black text-decoration-none">
                        <svg class="bi me-2" width="40" height="32" role="img" aria-label="LinkCom"><use xlink:href="#barcode"/></svg>
                        <h2> LinkCom </h2>
                    </a>

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                        <li>
                        <a href="/home" class="nav-link text-black">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#home"/></svg>
                            Home
                        </a>
                        </li>
                        <li>
                        <a href="#" class="nav-link text-black">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#groups"/></svg>
                            Groups
                        </a>
                        </li>
                        <li>
                        <a href="#" class="nav-link text-black">
                            <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#events"/></svg>
                            Revenges
                        </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <div class="border-5 border-white">
                            <a href="/profile" class="nav-link text-black">
                                <img src="<%= account[0].profile_picture %>" class="rounded-5 border-2 border-white" id="profile-picture" width="50" height="50" title="Profile">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- <div class="d-flex flex-wrap justify-content-center px-1 py-2 border-bottom">
            <form class="col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto" role="search">
            <input type="search" class="form-control" placeholder="Search..." aria-label="Search">
            </form>
        </div> -->
    </header>
    <main>
    <div>
        <div class="theme picture?"></div>
        <div>
            <div>
                <div class="profile-info text-bg-light border-bottom position-relative">
                </div>
                    <div class="profile-text-container text-black fw-bold">
                        <img class="profile-picture rounded-circle" src="<%= account[0].profile_picture %>" alt="Profile Picture">
                        <h1 class="profile-text"> <%= account[0].display_name %> </h1>
                    </div>
                    <div class="btn">
                        <button type="button" class="btn btn-light text-dark me-2" id="edit-profile">Edit Profile</button>
                        <button type="button" class="btn btn-primary text-dark me-2">+ Create Revenge</button>
                    </div>
            </div>
        </div>
    </div>
    <div class="account-posts mt-4">

    </div>
    </main>
    </body>
    <script src="/js/account.js"></script>
</html>
